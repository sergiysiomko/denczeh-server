<%- include('part/header',{title:"Список вакансій"})-%> <%-
include('part/menu-admin')-%>
<div class="container">
  <h3>Вакансії</h3>
  <a
    href="<%=process.env.DOMAIN%>/vacancies/add"
    class="waves-effect waves-light btn-large  green darken-1"
    id="add-btn"
    >Додати<i class="material-icons right">add</i></a
  >
  <ul class="collection" id="vacancies-list">
    <% vacancies.forEach(function(v){%>
    <li class="collection-item">
      <a href="<%=process.env.DOMAIN%>/vacancies/<%=v.link%>"><%=v.title%></a>
      <div class="right">
        <% if (v.isActive) { %>
        <a
          class="waves-effect waves-light btn  amber darken-2 "
          href="/vacancies/deactivate/<%= v.id %> "
        >
          ВИКЛ
        </a>
        <% }else { %>
        <a
          class="waves-effect waves-light btn  grey "
          href="/vacancies/activate/<%= v.id %>"
        >
          ВКЛ
        </a>
        <%}%>

        <a
          class="waves-effect waves-light btn  blue lighten-1 modal-triger"
          style="margin-left: 15px;"
          href="/vacancies/edit/<%= v.id %> "
        >
          <i class="material-icons">edit </i>
        </a>
        <a
          class="waves-effect waves-light btn  red modal-triger"
          style="margin-left: 27px;"
          href="/vacancies/remove/<%= v.id %> "
        >
          <i class="material-icons">delete </i>
        </a>
      </div>
    </li>
    <%}) %>
  </ul>
</div>
<%- include('part/footer-contacts')-%>
