<%- include('../part/header',{title:"Робота за кордоном | Новини"})-%>
<!--  -->
<%-include('../part/menu/menu', {auth})-%>

<div class="news-wrapper">
  <h1>Новини</h1>
  <section id="news-block">
    <div class="wrapper">
      <% news.forEach(n => {%>
      <div class="news z-depth-1" id="<%=n.id%>">
        <div class="photo">
          <a href="<%=process.env.DOMAIN%>/news/<%=n.link%>">
            <img src="<%=n.faceImage%>" alt="avatar" />
          </a>
        </div>
        <div class="content">
          <div class="title">
            <a href="<%=process.env.DOMAIN%>/news/<%=n.link%>"
              ><h2><%=n.title%></h2></a
            >
          </div>
        </div>
      </div>
      <%}) %>
    </div>
  </section>
</div>

<!--  -->

<%- include('../part/footer')-%>
